'{$STAMP BS2p}
'{$PBASIC 2.5}

MotR        CON        8         'Serial out pin
MotL        CON        9
Bmode       CON        16385     'Constant for 115,200 baud, 8 bit, no parity, true

' --------------Variables------------------------
'
NewSpdRt     VAR       Byte        'Right motor speed 0 is full reverse, 255 is full forward, 127 and 128 are off
NewSpdLeft   VAR       Byte        'Left motor speed 0 is full reverse, 255 is full forward, 127 and 128 are off
Pattern      VAR       Byte        'The Start pattern to be run
Delay        VAR       Byte        'Counter
IRout        VAR       Byte        'Sensor output to Branch
C            VAR       Byte        'Counter
RtHit        VAR       Word
LtHit        VAR       Word
NoHit        VAR       Word
OtherHit     VAR       Word
RightSearch  VAR       Bit

' --------------Initializations------------------
'
LOW 1
LOW 2
LOW 3
LOW 4
LOW 5

INPUT 12
INPUT 13
INPUT 14
INPUT 15

NewSpdRt = 127
NewSpdLeft = 127
Pattern = 0
Delay = 0
IRout = 0
C = 0
RtHit = 0
LtHit = 0
NoHit = 0
OtherHit = 0


'**************************************************************************
'**************************************************************************
'**************************************************************************
'***************Main Program***********************************************

PAUSE 100

NewSpdRt = 147
NewSpdLeft = 147
GOSUB Drive

PAUSE 900

NewSpdRt = 127
NewSpdLeft = 127
GOSUB Drive

PAUSE 1000

NewSpdRt = 107
NewSpdLeft = 107
GOSUB Drive

PAUSE 900

NewSpdRt = 127
NewSpdLeft = 127
GOSUB Drive

MAIN:

PAUSE 900

GOTO main


'**************************************************************************
'**************************************************************************
'*********Motor Control****************************************************


Drive:

SEROUT MotR, Bmode, ["!G ",SDEC ((NewSpdRt-127)<<3),CR]
SEROUT MotL, Bmode, ["!G ",SDEC ((127-NewSpdLeft)<<3),CR]

RETURN